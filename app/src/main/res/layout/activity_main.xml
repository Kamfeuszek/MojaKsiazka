<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moja książka"
        android:textColor="#212121"
        android:textSize="28dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/book" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#64B5F6"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/descriptionButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#64B5F6"
            android:textColor="#009688"
            android:text="Zobacz opis" />
        <Button
            android:id="@+id/saveBookButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#64B5F6"
            android:textColor="#009688"
            android:text="Dodaj do chcę przeczytać" />
        <Button
            android:id="@+id/remindAboutBookButton"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#64B5F6"
            android:textColor="#009688"
            android:text="Przypomnij o książce" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BDBDBD" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O Książce"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#212121"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Fascynująca powieść przygodowa, która wciągnie Cię od pierwszej strony."
        android:textColor="#3F51B5" />
    <TextView
        android:id="@+id/addToList"
        android:paddingTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodano do listy 'Chcę przeczytać'"
        android:textColor="#008000"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:textSize="12dp"
        android:textColor="#808080"
        android:text="Autor: Kamil Florczak" />
</LinearLayout>